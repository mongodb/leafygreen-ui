{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "prebuild": {
      "dependsOn": ["^prebuild", "^build", "^tsc"]
    },
    "build": {
      "dependsOn": ["^build", "^prebuild", "prebuild"],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.stories.{tsx,jsx,mdx}"],
      "outputs": [
        "dist/**/*.js",
        "dist/**/*.js.map",
        "stories.js",
        ".next/**",
        "out/**"
      ]
    },
    "tsc": {
      "dependsOn": ["^tsc", "^prebuild", "prebuild"],
      "outputs": [
        "dist/**/*.d.ts",
        "dist/**/*.d.ts.map",
        "tsconfig.tsbuildinfo"
      ]
    },
    "docs": {
      "dependsOn": ["^tsc"],
      "outputs": ["tsdoc.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "minify": {
      "dependsOn": ["build"],
      "outputs": ["dist/**/*-min.js", "dist/**/*-min.js.map"]
    }
  }
}
