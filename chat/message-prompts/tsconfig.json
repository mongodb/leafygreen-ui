{
  "extends": "@lg-tools/build/config/package.tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@leafygreen-ui/icon/dist/*": [
        "../../packages/icon/src/generated/*"
      ],
      "@leafygreen-ui/*": [
        "../../packages/*/src"
      ]
    },
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist/types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.stories.*"
  ],
  "references": [
    {
      "path": "../../packages/emotion"
    },
    {
      "path": "../../packages/lib"
    },
    {
      "path": "../../packages/palette"
    },
    {
      "path": "../../packages/tokens"
    },
    {
      "path": "../../packages/typography"
    },
    {
      "path": "../../packages/leafygreen-provider"
    }
  ]
}
